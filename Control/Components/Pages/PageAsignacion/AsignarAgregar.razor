@page "/asignacion/agregar"
@inject IAsignacionrecursosRepositorio _asignacionRepositorio
@inject NavigationManager NavigationManager

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-black bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Nueva Asignación</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <EditForm Model="asignacion" OnValidSubmit="Crear">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Equipo ID</label>
                <InputNumber class="form-control" @bind-Value="asignacion.EquipoId" />
                <ValidationMessage For="@(() => asignacion.EquipoId)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Laboratorio ID</label>
                <InputNumber class="form-control" @bind-Value="asignacion.LaboratorioId" />
                <ValidationMessage For="@(() => asignacion.LaboratorioId)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Usuario ID</label>
                <InputNumber class="form-control" @bind-Value="asignacion.UsuarioId" />
                <ValidationMessage For="@(() => asignacion.UsuarioId)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Estado</label>
                <InputText class="form-control" @bind-Value="asignacion.Estado" />
                <ValidationMessage For="@(() => asignacion.Estado)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <InputTextArea class="form-control" @bind-Value="asignacion.Descripcion" />
                <ValidationMessage For="@(() => asignacion.Descripcion)" />
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="/asignaciones" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private Asignacion asignacion = new()
        {
            FechaAsignacion = DateTime.Now,
            Estado = "Activo"
        };

    private async Task Crear()
    {
        await _asignacionRepositorio.Add(asignacion);
        NavigationManager.NavigateTo("/asignaciones");
    }
}