@page "/asignacion/modificar/{Id:int}"
@inject IAsignacionrecursosRepositorio _asignacionRepositorio
@inject NavigationManager NavigationManager

@if (Cargando)
{
    <div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/Images/Carga.gif" alt="Cargando contenido..." />
    </div>
}
else
{
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-black bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Modificar Asignación</h2>
                </div>
            </div>
        </div>
        <div class="card-body py-4">
            <EditForm Model="asignacion" OnValidSubmit="Modificar">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Equipo ID</label>
                    <InputNumber class="form-control" @bind-Value="asignacion.EquipoId" />
                    <ValidationMessage For="@(() => asignacion.EquipoId)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Laboratorio ID</label>
                    <InputNumber class="form-control" @bind-Value="asignacion.LaboratorioId" />
                    <ValidationMessage For="@(() => asignacion.LaboratorioId)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Usuario ID</label>
                    <InputNumber class="form-control" @bind-Value="asignacion.UsuarioId" />
                    <ValidationMessage For="@(() => asignacion.UsuarioId)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <InputText class="form-control" @bind-Value="asignacion.Estado" />
                    <ValidationMessage For="@(() => asignacion.Estado)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <InputTextArea class="form-control" @bind-Value="asignacion.Descripcion" />
                    <ValidationMessage For="@(() => asignacion.Descripcion)" />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="/asignaciones" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private bool Cargando { get; set; } = false;
    private Asignacion asignacion = new();

    protected override async Task OnInitializedAsync()
    {
        Cargando = true;
        asignacion = await _asignacionRepositorio.GetById(Id);
        Cargando = false;
    }

    private async Task Modificar()
    {
        await _asignacionRepositorio.Update(asignacion);
        NavigationManager.NavigateTo("/asignaciones");
    }
}