@page "/asignacion/eliminar/{Id:int}"
@inject IAsignacionrecursosRepositorio _asignacionRepositorio
@inject NavigationManager NavigationManager

@if (Cargando)
{
    <div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/Images/Carga.gif" alt="Cargando contenido..." />
    </div>
}
else
{
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-black bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Eliminar Asignación</h2>
                </div>
            </div>
        </div>
        <div class="card-body py-4">
            <div class="alert alert-danger" role="alert">
                ¿Está seguro que desea eliminar esta asignación?
            </div>

            <div class="mb-3">
                <label class="form-label">ID</label>
                <input type="text" class="form-control" value="@asignacion.Id" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Equipo ID</label>
                <input type="text" class="form-control" value="@asignacion.EquipoId" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Laboratorio ID</label>
                <input type="text" class="form-control" value="@asignacion.LaboratorioId" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Usuario ID</label>
                <input type="text" class="form-control" value="@asignacion.UsuarioId" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Estado</label>
                <input type="text" class="form-control" value="@asignacion.Estado" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea class="form-control" disabled>@asignacion.Descripcion</textarea>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="/asignaciones" class="btn btn-secondary">Cancelar</a>
                <button class="btn btn-danger" @onclick="Eliminar">Eliminar</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private bool Cargando { get; set; } = false;
    private Asignar asignacion = new();

    protected override async Task OnInitializedAsync()
    {
        Cargando = true;
        asignacion = await _asignacionRepositorio.GetById(Id);
        Cargando = false;
    }

    private async Task Eliminar()
    {
        await _asignacionRepositorio.Delete(asignacion.Id);
        NavigationManager.NavigateTo("/asignaciones");
    }
}